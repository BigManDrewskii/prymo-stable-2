# PRYMO Production Environment Variables
# Copy this file to .env.local and configure for your environment

# Application Environment
VITE_APP_ENV=production
VITE_APP_NAME=PRYMO
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://your-domain.com

# Tally Form Configuration
VITE_TALLY_FORM_ID=nWWvgN
VITE_TALLY_EMBED_URL=https://tally.so/widgets/embed.js

# Authentication Configuration
VITE_AUTH_STORAGE_KEY=prymo_auth
VITE_SIGNUP_STORAGE_KEY=tallySignupCompleted
VITE_SESSION_TIMEOUT=2592000000

# OpenRouter API Configuration (Optional - for enhanced features)
VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1
VITE_DEFAULT_MODEL=moonshotai/kimi-k2:free

# Analytics & Monitoring (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEVELOPMENT_TOOLS=false

# SEO & Social Media
VITE_APP_DESCRIPTION=Transform your writing with AI-powered text enhancement. Improve clarity, tone, and professionalism while maintaining your unique voice.
VITE_APP_KEYWORDS=AI writing, text enhancement, writing assistant, AI editor, content improvement
VITE_SOCIAL_IMAGE_URL=https://your-domain.com/og-image.png
VITE_TWITTER_HANDLE=@prymo_ai

# Contact & Support
VITE_SUPPORT_EMAIL=support@your-domain.com
VITE_CONTACT_EMAIL=hello@your-domain.com

# Rate Limiting (Client-side considerations)
VITE_MAX_TEXT_LENGTH=8000
VITE_MAX_REQUESTS_PER_MINUTE=10
VITE_COOLDOWN_PERIOD=60000

# Performance Optimization
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=86400000